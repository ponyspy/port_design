
.image
	width 100%
	margin 0 auto
	display block
	margin-bottom 60px
	&.size_400
		max-width 400px
	&.size_600
		max-width 600px
	&.size_800
		max-width 800px

.gallery-block
	margin-bottom 60px

.swiper-container
	max-width 800px
	height 800px
	margin-left auto
	margin-right auto

.swiper-slide
	background-size contain
	background-position center
	background-repeat no-repeat

.gallery-top
	max-width 800px
	height 600px

.gallery-thumbs
	height 200px
	box-sizing border-box
	padding 10px 0

.gallery-thumbs .swiper-slide
	width 25%
	height 100%
	opacity 0.7
	&:hover
		opacity 1

.gallery-thumbs .swiper-slide-active
	opacity 1
